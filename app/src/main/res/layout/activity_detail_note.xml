<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_4"
    android:orientation="vertical"
    tools:context=".activities.DetailNoteActivity">

    <include
        android:id="@+id/tool_bar_include"
        layout="@layout/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dimen_15" />

    <ScrollView
        android:layout_below="@+id/tool_bar_include"
        android:layout_above="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <EditText
                android:id="@+id/edt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/hint_title"
                android:background="@null"
                android:hint="@string/hint_title"
                android:inputType="text"
                android:padding="@dimen/dimen_10" />

            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/edt_title"
                android:autofillHints="@null"
                android:background="@null"
                android:hint="@null"
                android:inputType="text|textNoSuggestions|textMultiLine"
                android:padding="@dimen/dimen_10" />
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/layout_bottom"
        layout="@layout/layout_bottom_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>