<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_style"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10"
        android:weightSum="5">

        <ImageView
            android:id="@+id/btn_font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_font" />

        <ImageView
            android:id="@+id/btn_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_style" />

        <ImageView
            android:id="@+id/btn_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_image" />

        <ImageView
            android:id="@+id/btn_list_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_check" />

        <ImageView
            android:id="@+id/btn_color_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_color" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_below="@+id/layout_style"
        android:id="@+id/layout_choose_style"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="200dp"
        android:orientation="horizontal">

    </LinearLayout>
</RelativeLayout>
